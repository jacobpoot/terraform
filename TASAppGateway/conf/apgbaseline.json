{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.1.0.0",
    "parameters": {
        "existingdiagnosticsStorageAccountId": {
            "type": "securestring"
        },
        "existingWorkspaceId": {
            "type": "securestring"
        },
        "applicationGatewayName": {
            "type": "string"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Network/applicationGateways/providers/diagnosticSettings",
            "name": "[concat(parameters('applicationGatewayName'), '/', 'Microsoft.Insights/service')]",
            "dependsOn": [],
            "apiVersion": "2016-09-01",
            "properties": {
                "mode": "Incremental",
                "storageAccountId": "[parameters('existingDiagnosticsStorageAccountId')]",
                "workspaceId": "[parameters('existingWorkspaceId')]",
                "logs": [
                    {
                        "category": "ApplicationGatewayAccessLog",
                        "enabled": true,
                        "retentionPolicy": {
                            "days": 365,
                            "enabled": true
                        }
                    },
                    {
                        "category": "ApplicationGatewayPerformanceLog",
                        "enabled": true,
                        "retentionPolicy": {
                            "days": 365,
                            "enabled": true
                        }
                    },
                    {
                        "category": "ApplicationGatewayFirewallLog",
                        "enabled": true,
                        "retentionPolicy": {
                            "days": 365,
                            "enabled": true
                        }
                    }
                ],
                "metrics": [
                    {
                        "timeGrain": "PT1M",
                        "enabled": true,
                        "retentionPolicy": {
                            "days": 30,
                            "enabled": true
                        }
                    }
                ]
            }
        }
    ]
}